<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/e_images"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="3dp"
        android:adjustViewBounds="true"
        android:layout_marginStart="5dp"
        android:scaleType="fitEnd"
        app:layout_constraintEnd_toStartOf="@+id/el_product_name"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/img_1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/el_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
       android:layout_marginStart="10dp"
        android:text="washing_machine"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/e_images"
        app:layout_constraintTop_toTopOf="@+id/e_images" />


    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="5dp"
        android:text="price : 700"
        android:textColor="@color/black"
        android:textSize="@dimen/_10sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/el_product_name" />
<Button
    android:id="@+id/btn_add"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/add"
    android:textColor="@color/black"
    android:maxLines="1"
    android:layout_marginTop="@dimen/_5dp"
    android:layout_marginEnd="@dimen/_5dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="2dp"
        android:layout_marginStart="@dimen/_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/e_images" />
</androidx.constraintlayout.widget.ConstraintLayout>