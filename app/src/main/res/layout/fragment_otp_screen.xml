<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="otpViewModel"
            type="com.example.waste.models.OtpViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_enter_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/enter_your_otp"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_pin_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_enter_otp">

            <!-- OTP Digit Fields -->
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/editTextOtp1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:inputType="number"
                android:digits="0123456789"
                tools:text="1"
                android:maxLines="1"
                android:maxLength="1"
                android:text="@={otpViewModel.otpDigit1}"
                app:backgroundTint="@android:color/darker_gray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:nextFocusForward="@id/editTextOtp2" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/editTextOtp2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:digits="0123456789"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:nextFocusForward="@id/editTextOtp3"
                android:text="@={otpViewModel.otpDigit2}"
                app:backgroundTint="@android:color/darker_gray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/editTextOtp1"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="2" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/editTextOtp3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:digits="0123456789"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:nextFocusForward="@id/editTextOtp4"
                android:text="@={otpViewModel.otpDigit3}"
                app:backgroundTint="@android:color/darker_gray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/editTextOtp2"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="3" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/editTextOtp4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:digits="0123456789"
                android:gravity="center"
                android:inputType="number"
                android:maxLength="1"
                android:text="@={otpViewModel.otpDigit4}"
                app:backgroundTint="@android:color/darker_gray"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/editTextOtp3"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="4" />

        </androidx.constraintlayout.widget.ConstraintLayout>
<!--        android:onClick="@{() -> otpViewModel.verifyOtp()}"-->
        <Button
            android:id="@+id/btn_proceed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:text="@string/verify_otp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_pin_view" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
