<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Waste" parent="Theme.Material3.DayNight.NoActionBar">
<!--         Customize your light theme here.-->
         <item name="colorPrimary">@color/primaryColor</item>
    </style>

    <style name="Theme.MyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
    </style>

    <style name="Theme.Waste" parent="Base.Theme.Waste" />

    <style name="Theme.Waste.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Waste.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Waste.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppBaseTheme" parent="android:Theme.NoTitleBar.Fullscreen" />

</resources>